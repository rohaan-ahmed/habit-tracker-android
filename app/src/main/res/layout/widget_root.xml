<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_root_bg"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/widget_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="sans-serif-medium"
        android:maxLines="1"
        android:text="Rohaan's Habit Tracker"
        android:textColor="@color/widget_text_primary"
        android:textSize="14sp" />

    <ListView
        android:id="@+id/widget_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:divider="@drawable/widget_row_divider"
        android:dividerHeight="8dp"
        android:listSelector="@android:color/transparent" />

    <TextView
        android:id="@+id/widget_empty"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="No habits yet"
        android:textColor="@color/widget_text_muted"
        android:textSize="12sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/widget_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="0 activities completed. 0 targets met."
        android:textColor="@color/widget_text_muted"
        android:textSize="15sp" />
</LinearLayout>
